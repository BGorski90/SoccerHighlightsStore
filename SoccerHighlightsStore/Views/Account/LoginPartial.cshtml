@model LoginViewModel
<div class="container">
    @using (Html.BeginForm("Login", "Account", new { returnUrl = Request.Url.ToString() }, FormMethod.Post, new { id = "loginForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @id = "loginEmail", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @id = "loginPwd", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" id="loginBtn" class="btn btn-success" value="Login" style="margin:20px" /> &emsp;
                <a style="margin:20px" href="/Account/Register"><input type="button" class="btn btn-primary" value="Register"></a>
                <strong> Register now and collect points to get FREE videos!</strong>
            </div>
        </div>
    }
</div>

